{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "text",
      "required": true,
      "private": false
    },
    "description": {
      "type": "text",
      "required": true
    },
    "views": {
      "type": "biginteger",
      "default": "0"
    },
    "markdown": {
      "type": "text"
    },
    "synopsis": {
      "type": "string"
    },
    "likes": {
      "type": "biginteger",
      "default": "0"
    },
    "comments": {
      "type": "biginteger",
      "default": "0"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "reading_time": {
      "type": "string"
    },
    "bookmarks": {
      "via": "post",
      "collection": "bookmarks"
    },
    "slug": {
      "type": "string"
    },
    "hashtags": {
      "via": "post",
      "collection": "hashtags"
    }
  }
}
